@model BookStore.Models.Player
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Изменение игрока</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Футболист</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label>Имя игрока</label>
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Возраст</label>
            @Html.EditorFor(model => model.Age, new { @class = "form-control" })
        </div>

        <div class="form-group">
             <label>Позиция на поле</label>
            @Html.TextBoxFor(model => model.Position, new { @class = "form-control" })
        </div>
        <div class="form-group">
             <label>Команда</label>
            @Html.DropDownListFor(model => model.TeamId, ViewBag.Teams as SelectList,new {@class="form-control"})
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    </fieldset>
}
<div>
    @Html.ActionLink("Вернуться к списку футболистов", "Index",null,new {@class = "btn btn-default"})
</div>
